    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
            int n = Integer.parseInt(txtVal.getText());
            if (n%2 == 0) {
                lblRes.setText("Par");
            } else {
                lblRes.setText("√çmpar");
            }
    }                                        

