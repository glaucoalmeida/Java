    private void btnCalcActionPerformed(java.awt.event.ActionEvent evt) {                                        
        int a = Integer.parseInt(txtAno.getText());
        int i = 2022 - a;
        lblIdade.setText(Integer.toString(i));
        String Sit = (i<18 && i>=16 || i>65)?"Voto Opcional":"Voto Obrigatório";
        lblSit.setText(Sit);
               
    }                                       

